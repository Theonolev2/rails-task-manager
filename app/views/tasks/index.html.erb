<h1>Tasks index</h1>

<% @tasks.each do |task| %>
  <div class="task-card">
    <input type="checkbox"
    <% if task.completed %> checked <% end %>>
    <h3><%= link_to task.title, task_path(task) %></h3>
    <%= link_to "Delete",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </div>
<% end %>
<%= link_to "New task", tasks_new_path %>
